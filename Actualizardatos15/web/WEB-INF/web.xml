<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>ConsultarAlumnnos</servlet-name>
        <servlet-class>ConsultarAlumnnos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarAlumnos</servlet-name>
        <servlet-class>RegistrarAlumnos</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminaAlumno</servlet-name>
        <servlet-class>EliminaAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarDatosAlumno</servlet-name>
        <servlet-class>ActualizarDatosAlumno</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Consulta</servlet-name>
        <servlet-class>Consulta</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ConsultarAlumnnos</servlet-name>
        <url-pattern>/ConsultarAlumnnos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarAlumnos</servlet-name>
        <url-pattern>/RegistrarAlumnos</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminaAlumno</servlet-name>
        <url-pattern>/EliminaAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarDatosAlumno</servlet-name>
        <url-pattern>/ActualizarDatosAlumno</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Consulta</servlet-name>
        <url-pattern>/Consulta</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
